---
import BaseHead from '../components/BaseHead.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

export async function getStaticPaths({ paginate }) {
	const posts = (await getCollection('blog', ({ data }) => {
		// 过滤掉草稿文章
		return data.draft !== true;
	})).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
	);
	
	return paginate(posts, { pageSize: 10 });
}

const { page } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} - 第${page.currentPage}页`} description={SITE_DESCRIPTION} />
		<style>
			html, body {
				height: 100%;
				margin: 0;
				padding: 0;
			}
			
			body {
				background: #c0c0c0;
				font-family: 'MS Sans Serif', sans-serif;
				display: flex;
				flex-direction: column;
				min-height: 100vh;
			}
			
			.desktop {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 20px;
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			
			.window {
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			
			.window-body {
				flex: 1;
				display: flex;
				flex-direction: column;
			}
			
			.article-list {
				flex: 1;
				margin-bottom: 20px;
			}
			
			.article-item {
				padding: 15px 20px;
				border-bottom: 1px solid #808080;
				display: flex;
				justify-content: space-between;
				align-items: center;
				margin-bottom: 5px;
			}
			
			.article-item:last-child {
				border-bottom: none;
			}
			
			.article-title {
				color: #000080;
				text-decoration: none;
				font-weight: bold;
				flex: 1;
				font-size: 16px;
				line-height: 1.4;
			}
			
			.article-title:hover {
				text-decoration: underline;
			}
			
			.article-date {
				color: #666666;
				font-size: 13px;
				margin-left: 30px;
				white-space: nowrap;
			}
			
			.pagination {
				text-align: center;
				margin-top: 20px;
			}
			
			.pagination a,
			.pagination span {
				margin: 0 5px;
				padding: 2px 8px;
				text-decoration: none;
				color: #000000;
			}
			
			.pagination .current {
				font-weight: bold;
				background: #000080;
				color: #ffffff;
			}
		</style>
	</head>
	<body>
		<Navigation />
		<div class="desktop">
			<div class="window">
				<div class="title-bar">
					<div class="title-bar-text">微信公众号文章列表 - 第{page.currentPage}页</div>
				</div>
				<div class="window-body">
					<div class="article-list">
						{page.data.map((post) => {
							const date = new Date(post.data.pubDate);
							const year = date.getFullYear();
							const month = (date.getMonth() + 1).toString().padStart(2, '0');
							
							return (
								<div class="article-item">
									<a href={`/${year}/${month}/${post.data.slug || post.id}/`} class="article-title">
										{post.data.title}
									</a>
									<span class="article-date">
										<FormattedDate date={post.data.pubDate} />
									</span>
								</div>
							);
						})}
					</div>
					
					{page.lastPage > 1 && (
						<div class="pagination">
							{page.url.prev && (
								<a href={page.url.prev} class="button">上一页</a>
							)}
							
							{Array.from({ length: page.lastPage }, (_, i) => i + 1).map((pageNum) => (
								pageNum === page.currentPage ? (
									<span class="current">{pageNum}</span>
								) : (
									<a href={pageNum === 1 ? '/' : `/${pageNum}/`}>{pageNum}</a>
								)
							))}
							
							{page.url.next && (
								<a href={page.url.next} class="button">下一页</a>
							)}
						</div>
					)}
				</div>
			</div>
		</div>
		<Footer />
	</body>
</html>